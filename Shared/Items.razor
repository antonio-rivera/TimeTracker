@using TimeTracker.Models
@using System.Diagnostics.CodeAnalysis

<table class="table table-bordered">
    <thead>
        <tr>
            <th class="w-25">Name</th>
            <th class="w-25">Project</th>
            <th class="w-25">Time</th>
        </tr>
    </thead>
    <tbody>
        @if (WorkItems is not null)
        {
            @foreach (var item in WorkItems)
            {
                <tr class="align-middle">
                    <td><textarea class="form-control text-center" @bind="@item.Name" /></td>
                    <td><textarea class="form-control text-center" @bind="@item.Project.Name" /></td>
                    <td><textarea @onchange="@(async () => await OnUpdateProjectTime.InvokeAsync(item.Project))" class="form-control text-center" /></td>
                    <td><button @onclick="@(async () => await OnDeleteItem.InvokeAsync(item.Id))" class="btn btn-danger">Delete</button></td>
                </tr>
            }
        }
    </tbody>
</table>



@code {


    [Parameter, AllowNull]
    public List<WorkItem> WorkItems { get; set; }

    [Parameter]
    public EventCallback<Guid> OnDeleteItem { get; set; }

    [Parameter]
    public EventCallback<Project> OnUpdateProjectTime { get; set; }

    //public EventCallback<Project> OnUpdateProjectName { get; set; }

}

